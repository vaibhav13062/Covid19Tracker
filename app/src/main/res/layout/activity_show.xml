<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stateresult" />

    <TextView
        android:id="@+id/delta_confimed"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/cabin_medium"
        android:text="+"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/confirm"
        app:layout_constraintTop_toTopOf="@+id/confirm" />

    <TextView
        android:id="@+id/delta_deaths"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/cabin_medium"
        android:text="+"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/deaths"
        app:layout_constraintTop_toTopOf="@+id/deaths" />

    <TextView
        android:id="@+id/delta_recovered"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/cabin_medium"
        android:text="+"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/recovered"
        app:layout_constraintTop_toTopOf="@+id/recovered" />

    <TextView
        android:id="@+id/confirmed_view2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Confirmed:-"
        android:textColor="#E12E31"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state_name" />

    <TextView
        android:id="@+id/recovered_view2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Recovered:-"
        android:textColor="#E12E31"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/active_view" />

    <TextView
        android:id="@+id/active_view"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Active:-"
        android:textColor="#E12E31"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmed_view2" />

    <TextView
        android:id="@+id/deaths_view3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Deaths:-"
        android:textColor="#E12E31"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recovered_view2" />

    <TextView
        android:id="@+id/noRecent_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/cabin_medium"
        android:text="No Recent Update"
        android:textColor="#E12E31"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/deaths_view3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/state_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/cabin_medium"
        android:text="STATE NAME"
        android:textColor="@color/backgroud"
        android:textSize="36sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/backbuttonStateresult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backbuttonStateresult"
        app:layout_constraintTop_toTopOf="@+id/backbuttonStateresult" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/cabin_medium"
        android:textColor="#606060"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/confirmed_view2"
        app:layout_constraintStart_toEndOf="@+id/confirmed_view2"
        app:layout_constraintTop_toTopOf="@+id/confirmed_view2" />

    <TextView
        android:id="@+id/active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/cabin_medium"
        android:textColor="#606060"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/active_view"
        app:layout_constraintStart_toEndOf="@+id/active_view"
        app:layout_constraintTop_toTopOf="@+id/active_view" />

    <TextView
        android:id="@+id/recovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/cabin_medium"
        android:textColor="#606060"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/recovered_view2"
        app:layout_constraintStart_toEndOf="@+id/recovered_view2"
        app:layout_constraintTop_toTopOf="@+id/recovered_view2" />

    <TextView
        android:id="@+id/deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/cabin_medium"
        android:textColor="#606060"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/deaths_view3"
        app:layout_constraintStart_toEndOf="@+id/deaths_view3"
        app:layout_constraintTop_toTopOf="@+id/deaths_view3" />

    <Button
        android:id="@+id/backbuttonStateresult"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/abc_vector_test"
        android:backgroundTint="@color/backgroud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6966853236033666/7683209432"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>